<script type="text/javascript">
    function ledgerPost() {
        $("#loading").show();
        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: '@Url.Action("LedgerPost", "SavingInstallmentCorrection", "http")',
            type: "GET",
            dataType: 'json',
            async: true,
            //data: { memberid: member, centerId: $("#CenterID").val() },
            //minLength: 1,
            success: function (data) {

                $("#loading").hide();
                var msg = "Ledger posted successful";
                var css = "success";
                if (data.Message != null) {
                    msg = data.Message;
                    css = "failed"
                }

                $("#dvMessage").attr('class', css);
                $("#dvMessage").html(msg);
                $("#dvMessage").show();
                if (data.Message == null)
                    $("#dvMessage").toggle('fade', 1500);

            },
            error: function (request, status, error) {
                $("#loading").hide();
                $("#dvMessage").attr('class', 'failed');
                $("#dvMessage").html(request.statusText);
                $("#dvMessage").show();
            }
        });


    }
    $(document).ready(function () {

        $("#confirmDlg").dialog({
            autoOpen: false,
            height: 150,
            width: 400,
            modal: true,
            title: 'Confirmation',
            buttons: {
                "Yes": function () {
                    ledgerPost();
                    $(this).dialog("close");
                },
                "No": function () {
                    //alert("No Office selected. Employee office will be used.");
                    $(this).dialog("close");
                }
            }
        });
        $('#btnPost').click(function (e) {
            e.preventDefault();
            $("#confirmDlg").dialog('open');
            //alert('sfdf');

        });
        $('#grid').jtable({
            //  title: 'Purpose List',
            paging: true,
            pageSize: 5,
            sorting: true,
            defaultSorting: 'Name ASC',
            actions: {

                listAction: function (postData, jtParams) {
                    console.log("Loading from custom function...");
                    return $.Deferred(function ($dfd) {
