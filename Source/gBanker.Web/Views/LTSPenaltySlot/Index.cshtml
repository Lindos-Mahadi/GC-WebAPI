    function PopupForm()
    {

        $('html, body').animate({ scrollTop: $('#InsuranceDiv').offset().top }, 'slow');
        $("#InsuranceDiv").dialog({
            autoOpen: false,
            height: 350,
            width: 450,
            modal: true,
            buttons: {

                "Close": function () {

                    $(this).dialog("close");
                }
            }
        });

        var showPopup = "True";
        if (showPopup == "True") {
            $("#InsuranceDiv").dialog('open');
        }

    }

