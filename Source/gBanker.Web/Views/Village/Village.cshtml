                             + dataItem.DistrictCode + "\",\""
                             + dataItem.DistrictName + "\",\""
                             + dataItem.UpozillaCode + "\",\""
                             + dataItem.UpozillaName + "\",\""
                             + dataItem.UnionCode + "\",\""
                             + dataItem.UnionName + "\",\""
