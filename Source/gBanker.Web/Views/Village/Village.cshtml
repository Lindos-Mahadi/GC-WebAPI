        $("#HiddenUpozillaID").val(UpozillaCode);
        $("#HiddenUnionID").val(UnionCode);

        couwisediv(CountryID);
        divwisedis(DivisionCode);
        diswiseupo(DistrictCode);
        upowiseuni(UpozillaCode);


        //$("#CountryID").val(CountryID);
