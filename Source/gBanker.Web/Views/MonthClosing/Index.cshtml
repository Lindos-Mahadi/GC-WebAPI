                @Html.EditorFor(model => model.ProcessDate, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                @Html.ValidationMessageFor(model => model.ProcessDate, "", new { @class = "text-danger" })
            </div>
