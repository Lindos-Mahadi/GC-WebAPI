                    $("#Penalty").val(result.penalty);
                    $("#Withdrawal").val(result.withdrawal);
                    $("#SavingInstallment").val(result.savInstall);
                    $("#NoOfAccount").val(result.LoanTerm);
                    $("#Balance").val(result.Balance);
                    $body.removeClass("loading");


                },
                error: function (err) {
                    $body.removeClass("loading");
                }
            });
        }
    }

