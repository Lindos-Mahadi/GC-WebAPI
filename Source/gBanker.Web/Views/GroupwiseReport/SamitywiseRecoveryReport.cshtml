
@{
    ViewBag.Title = "SamitywiseRecoveryReport";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#txtFromDt").datepicker(
        {
            dateFormat: "dd-M-yy",
            showAnim: "scale"
        });
        $("#txtToDt").datepicker(
        {
            dateFormat: "dd-M-yy",
            showAnim: "scale"
        });

        $("#btnView").click(function (e) {
            e.preventDefault();
            var DateFrom = $("#txtFromDt").val();
            var DateTo = $("#txtToDt").val();
            var url;
            if (DateFrom != '' && DateTo != '') {
                var url = '/GroupwiseReport/GenerateSamitywiseRecoveryReport?Qtype=2&DateFrom=' + DateFrom+ '&DateTo=' + DateTo;
                window.open(url, 'mywindow', 'fullscreen=yes, scrollbars=auto');
            }
            else {
                alert('Date field cannot be blank')
            }
        });
        $("#btnExport").click(function (e) {
            e.preventDefault();
            var DateFrom = $("#txtFromDt").val();
            var DateTo = $("#txtToDt").val();
            var url;
            if (DateFrom != '' && DateTo != '') {
                var url = '/GroupwiseReport/GenerateSamitywiseRecoveryReportExport?Qtype=2&DateFrom=' + DateFrom + '&DateTo=' + DateTo;
                window.open(url, 'mywindow', 'fullscreen=yes, scrollbars=auto');
            }
            else {
                alert('Date field cannot be blank')
            }
        });
    });
</script>
<h2 class="page-title">Loan & Savings Coll. Statement (Samity Wise)</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.Label("Date From", new { @class = "control-label" })
                @Html.TextBox(" ", ViewData["TrxDate"], new { @ID = "txtFromDt", @class = "form-control" })
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                @Html.Label("Date To", new { @class = "control-label" })
                @Html.TextBox(" ", ViewData["TrxDate"], new { @ID = "txtToDt", @class = "form-control" })
            </div>
        </div>
    </div>
    <h2 class="page-title"></h2>
    <div class="row">
        <div class="col-md-2">
            <div class="form-group from-action">
                <input type="submit" value="View" class="btn btn-primary" id="btnView" />
            </div>
        </div>
        <div class="col-md-10">
            <div class="form-group from-action">
                <input type="button" id="btnExport" value="Export" class="btn btn-primary" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
}








