@model IEnumerable<gBanker.Web.ViewModels.SavingSummaryViewModel>

@{
    ViewBag.Title = "SavingReinstate List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<style type="text/css">
    th {
        height: 40px;
        vertical-align: top;
        margin-top: 0px !important;
        padding-top: 0px !important;
    }

    span.jtable-column-header-text {
        margin-top: 0px !important;
    }
</style>

<script type="text/javascript">

    function deleteConfirm(status) {
        if (status == "true") {
            return confirm('Are you sure you want to delete this record');
        }
        else {
            alert("You cannot delete this record because it is already disabled.");
            return false;
        }
    }
</script>
<script type="text/javascript">
    function ledgerPost() {
        $("#loading").show();
        $.ajax({
            contentType: "application/json; charset=utf-8",
            url: '@Url.Action("LedgerPost", "SavingsInstallmentUpdate", "http")',
            type: "GET",
            dataType: 'json',
            async: true,
            //data: { memberid: member, centerId: $("#CenterID").val() },
            //minLength: 1,
            success: function (data) {

                $("#loading").hide();
                var msg = "Ledger posted successful";
                var css = "success";
                if (data.Message != null) {
                    msg = data.Message;
                    css = "failed"
                }

                $("#dvMessage").attr('class', css);
                $("#dvMessage").html(msg);
                $("#dvMessage").show();
                if (data.Message == null)
                    $("#dvMessage").toggle('fade', 1500);

            },
            error: function (request, status, error) {
                $("#loading").hide();
                $("#dvMessage").attr('class', 'failed');
                $("#dvMessage").html(request.statusText);
                $("#dvMessage").show();
            }
        });
    }
    $(document).ready(function () {
        $("#DateFromValue").datepicker(
  {

      dateFormat: "dd-M-yy",
      showAnim: "scale"
    

  });
        $("#DateFromValue").datepicker(
       'setDate', new Date());

        $("#DateToValue").datepicker(
       {
           dateFormat: "dd-M-yy",
           showAnim: "scale"
     

       });
        $("#DateToValue").datepicker(
     'setDate', new Date());
        $("#confirmDlg").dialog({
            autoOpen: false,
            height: 150,
            width: 400,
            modal: true,
            title: 'Confirmation',
            buttons: {
                "Yes": function () {
                    ledgerPost();
                    $(this).dialog("close");
                },
                "No": function () {
                    //alert("No Office selected. Employee office will be used.");
                    $(this).dialog("close");
                }
            }
        });
        $('#btnPost').click(function (e) {
            e.preventDefault();
            $("#confirmDlg").dialog('open');
        });

        //////////////////////////
        $('#grid').jtable({
           // title: 'SavingSummary List',
            paging: true,
            pageSize: 10,
            sorting: true,
            defaultSorting: 'Name ASC',
            actions: {

                listAction: '/SavingsInstallmentUpdate/GetSavingReinstate'

            },
            fields: {
                SavingSummaryID: {
                    key: true,
                    list: false,
                    create: false,
                    edit: false
                },
                OfficeCode: {
                    title: 'Office',
                    width: '6%'

                },
                CenterCode: {
                    title: 'Samity',
                    width: '6%'
                },
                MemberCode: {
                    title: 'Member',
                    width: '6%'
                },
                ProductCode: {
                    title: 'Product',
                    width: '6%'
                },

                NoOfAccount: {
                    title: 'NoOfAccount',
                    width: '4%'
                },

                TransactionDate: {
                    title: 'Tr. Date',
                    type: 'date',
                    displayFormat: 'd-M-yy',
                    width: '10%'
                },
                OpeningDate: {
                    title: 'Opening Date',
                    type: 'date',
                    displayFormat: 'd-M-yy',
                    width: '12%'
                },
                Deposit: {
                    title: 'Deposit',
                    width: '6%'
                },
                Withdrawal: {
                    title: 'Withdrawal',
                    width: '10%'
                },
                InterestRate: {
                    title: 'Int. Rate',
                    width: '6%'
                },
                SavingInstallment: {
                    title: 'Sav Inst.',
                    width: '6%'
                },
                CumInterest: {
                    title: 'Cum. Int.',
                    width: '6%'
                },
                MonthlyInterest: {
                    title: 'Monthly Int.',
                    width: '6%'
                },
                Penalty: {
                    title: 'Penalty',
                    width: '6%'
                },

                MaturedDate: {
                    title: 'Mat Date',
                    type: 'date',
                    displayFormat: 'd-M-yy',
                    width: '12%'
                },
                ClosingDate: {
                    title: 'Cl Date',
                    type: 'date',
                    displayFormat: 'd-M-yy',
                    width: '12%'
                },


               
               
                DeleteLink: {
                    title: "SavingReinstate",
                    display: function (data) {
                        return '<div class="text-center delete-link"><a href="/SavingsInstallmentUpdate/SavingReinstateYes/' + data.record.SavingSummaryID + '"' + " onclick='return confirm(" + '"Are you sure you want to Reinstate this item?");' + "'" + "'><i class='fa fa-trash-o'></i></a></div>";

                        //return '<a href="/SavingsInstallmentUpdate/Delete/' + data.record.SavingSummaryID + '"' + " onclick='return confirm(" + '"Are you sure you want to delete this item?");' + "'" + '>Delete</a>';
                    }
                }
            }
        });
        reloadGrid();
        //////////////////////////
    });

    function reloadGrid() {
        $('#grid').jtable('load', { filterColumn: $('#filterColumn').val(), filterValue: $('#filterValue').val(), DateFromValue: $('#DateFromValue').val(), DateToValue: $('#DateToValue').val() });
    }
</script>
