    <div class="col-md-12">
        <table id="tblAdd">
            <thead>
                <tr>
                    <th>Select</th>
                    <th>Category</th>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Store</th>
                    <th>Remarks</th>
                    <th></th>
                </tr>
                <tr>
                    <th><input type="checkbox" id="chkAll" /></th>
                    <th><select id="Category"></select></th>
                    <th>
                        <input type="text" id="txtItem" autocomplete="off" />
                        <input type="hidden" id="hdnItem" />
                    @*<select id="ddlItem"></select>*@
