@model gBanker.Web.ViewModels.PurposeViewModel

@{
    ViewBag.Title = "Purpose Create";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#CreateDate").datepicker();
    });

</script>

@Html.ActionLink("Back to List", "Index", null, new { @class = "pull-right" })

<h2 class="page-title">Add Purpose</h2>
@using (Html.BeginForm("Create", "Purpose", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()    
