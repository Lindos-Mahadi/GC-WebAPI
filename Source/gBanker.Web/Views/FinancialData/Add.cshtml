@model gBanker.Web.ViewModels.FinancialDataAddViewModel

@{
    ViewBag.Title = "Add Financial Data";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<a class="btn btn-info btn-sm pull-right" href="/OLRSReport/FinancialData">Back to List</a>
<h2>Financial Data</h2>
@using (Html.BeginForm("add", "financialdata", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <h2 class="page-title"></h2>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.IndicatorCode, new { @class = "required" })
                @Html.DropDownListFor(model => model.IndicatorCode, Model.IndicatorList, "Select One", new { @class = "form-control chosen" })
                @Html.ValidationMessageFor(model => model.IndicatorCode)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.MNYR, new { @class = "required" })
                @Html.EditorFor(model => model.MNYR, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MNYR)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, new { @class = "required" })
                @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Amount)
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group form-action">
                <button type="submit" class="btn btn-primary"> Submit </button>
            </div>
        </div>
    </div>
    <div id='grid'></div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jtable")
    @Scripts.Render("~/bundles/jtable")
    <script src="~/Assets/js/olrs/financialDataManager.js"></script>
}