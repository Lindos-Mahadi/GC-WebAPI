
@model OlrsProcessViewModel

@{
    ViewBag.Title = "Process";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<h2 class="page-title">Process</h2>

<ul class="nav nav-tabs">
    <li class="active"><a data-toggle="tab" href="#process">Process</a></li>
    <li><a data-toggle="tab" href="#synctopksf">Sync to PKSF</a></li>
</ul>

<div class="tab-content">
    <div id="process" class="tab-pane fade in active" style="margin-top:10px">

        @*@using (Html.BeginForm("Process", "OlrsProcess", FormMethod.Post))
            {*@
