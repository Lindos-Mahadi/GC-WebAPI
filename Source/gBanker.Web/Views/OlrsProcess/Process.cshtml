                </div>
            </div>
        </div>
        @*}*@
        <section-process-response></section-process-response>
    </div>
    <div id="synctopksf" class="tab-pane fade" style="margin-top:10px">
        <div class="raw">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.SyncToPKSFType, htmlAttributes: new { @class = "control-label required" })
                    @Html.DropDownListFor(model => model.SyncToPKSFType, DropdownListHelper.GetDropdownList(DropdownListTypes.SyncToPKSFType, Model.SyncToPKSFType), new { @multiple = "multiple", @class = "selectpicker form-control" })
                    @Html.ValidationMessageFor(model => model.SyncToPKSFType)
                </div>
            </div>
        </div>
        <div class="raw">
            <div class="col-md-12">
                <div class="raw">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SyncMonth, htmlAttributes: new { @class = "control-label required" })
                            @Html.EditorFor(model => model.SyncMonth, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SyncMonth)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="raw">
            <div class="col-md-12">
                <div class="form-group">
                    <div class="form-group form-action">
                        <button type="button" id="btnSyncToPKSF" class="btn btn-sm btn-danger"><i class="fa fa-cloud-upload" aria-hidden="true"></i> Sync to PKSF</button>
                        <button type="button" id="btnReset" class="btn btn-sm btn-info"><i class="fa fa-refresh" aria-hidden="true"></i> Reset</button>
                    </div>
                </div>
            </div>
        </div>
        <section-sync-response></section-sync-response>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jtable")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/css/bootstrap-select.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.4/js/bootstrap-select.min.js"></script>
    <script src="~/Assets/js/olrs/olrsProcessManager.js"></script>
}
