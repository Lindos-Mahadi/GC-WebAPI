            <div class="raw">
                <div class="col-md-12">
                    <div class="raw">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.ProcessMonth, htmlAttributes: new { @class = "control-label required" })
                                @Html.EditorFor(model => model.ProcessMonth, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ProcessMonth)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
