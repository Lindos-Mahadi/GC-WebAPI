                CreateDate: {
                    title: 'Create Date',
                    type: 'date',
                    display: function (data) {
                        return moment(data.record.CreateDate).format('DD/MM/YYYY HH:mm:ss');
                    }
                   // displayFormat: 'd-M-yy',
                },
            }
        });
        //reloadGrid();
         //$('#grid').jtable('load');
