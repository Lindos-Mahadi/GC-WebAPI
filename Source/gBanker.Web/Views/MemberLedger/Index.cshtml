                   // width: '8%'
                },
                IntCharge: {
                    title: 'Int. Charge',
                   // width: '8%'
                },
                InterestPaid: {
                    title: 'Int. Paid',
                   // width: '8%'
                },
                InterestBalance: {
                    title: 'Int. Balance',
                   // width: '8%'
