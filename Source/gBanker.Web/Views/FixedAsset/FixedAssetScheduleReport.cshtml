@model gBanker.Web.ViewModels.FixedAssetViewModel

@{
    ViewBag.Title = "Fixed Asset Schedule Report";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

<script>
    $(document).ready(function () {
        $("#btnPrint").click(function () {
            var year = $("#Year").val();
            if (year!="") {
                url = '/FixedAsset/FixedAssetScheduleReportPrint?Year=' + year;
                window.open(url, 'mywindow', 'fullscreen=yes, scrollbars=auto');
            }                
        })
    });

</script>

<h2 class="page-title">Fixed Asset Schedule Report</h2>
<div class="form-horizontal">
    <div class="row">
            <div class="col-sm-6">
                <div class="form-group">
                    <label class="control-label col-sm-4">Year</label>
                    <div class="col-sm-7">
                        @Html.DropDownListFor(model => model.Year, Model.YearList, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    <div class="row col-sm-offset-2">
        <input type="button" value="Print" id="btnPrint" class="btn btn-primary" />
    </div>
</div>