@model gBanker.Web.ViewModels.EmployeeHistoryUpdateViewModel

@{
    ViewBag.Title = "Employee History Edit";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    var OldOfficeList = Model == null ? null : Model.OldOfficeCodeList;
}



<script type="text/javascript">
    $(document).ready(function () {
        $("#OldJoinDate").datepicker();
        gBankerDatePicker("OldJoinDate");
    });


</script>

@Html.ActionLink("Back to List", "Index", null, new { @class = "pull-right" })
<h2 class="page-title">Edit Employee History</h2>

@using (Html.BeginForm("Edit", "EmployeeHistoryUpdate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="">


        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="display :none">
            @Html.LabelFor(model => model.EmployeeHistoryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EmployeeHistoryId, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.EmployeeHistoryId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.EmployeeCode, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.EmployeeCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.EmployeeCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.OfficeCode, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.OfficeCode, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.OfficeCode, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.OldOfficeCode, htmlAttributes: new { @class = "control-label" })

                    @Html.DropDownListFor(model => model.OldOfficeId, OldOfficeList, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.OldOfficeCode, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.OldJoinDate, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.OldJoinDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.OldJoinDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="form-group form-action">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/gbUtility")
}
