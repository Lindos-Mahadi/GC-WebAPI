@model gBanker.Web.ViewModels.LoanCodeWithRateViewModel

@{
    ViewBag.Title = "Manage Imputed Cost Loan Service Charge Amount";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}

@*<a href="javascript:void(0);" id="btnSyncToPKSF" class="btn btn-sm btn-danger pull-right"><i class="fa fa-cloud-upload" aria-hidden="true"></i> Sync to PKSF</a>*@
<a class="btn btn-info btn-sm pull-right" href="/LCdeWizSerChar/IMPLoanSCAmountData">Back to List</a>

<h2 class="page-title">Manage Imputed Cost Loan Service Charge Amount</h2>

@using (Html.BeginForm("LCSerCharge", "LCdeWizSerChar", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label required">Date</label>
                @Html.EditorFor(model => model.LoanDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LoanDate)
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label class="control-label required">Loan Code</label>
                @Html.DropDownListFor(model => model.LoanCode, Model.LoanCodeList, new { @class = "form-control chosen" })
                @Html.ValidationMessageFor(model => model.LoanCode)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label required">Service Charge Rate</label>
                @Html.DropDownListFor(model => model.ServiceChargeRate, new List<SelectListItem>(), new { @class = "form-control chosen" })
                @Html.ValidationMessageFor(model => model.ServiceChargeRate)
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label required">Service Amount</label>
                @Html.EditorFor(model => model.ServiceAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ServiceAmount)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="form-group form-action">
                <button type="submit" class="btn btn-primary btnLCSerCharge"> Submit</button>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jtable")

    <link href="~/Assets/plugins/choosen/chosen.css" rel="stylesheet" />
    <script src="~/Assets/plugins/choosen/chosen.jquery.js"></script>

    <script src="~/Assets/js/olrs/lcdeWizSerCharManager.js"></script>
}
