                    }
                });
            }
            else {
                $("#ddlOffice").empty();
            }
        });

        $("#txtAccLevel").change(function () {
            var accLevel = $("#txtAccLevel").val();
            if (accLevel > 0) {
                var ddlAccName = $("#ddlAccName");
                $.ajax({
                    type: 'GET',
                    contentType: "application/json; charset=utf-8",
