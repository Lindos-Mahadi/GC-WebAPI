@model gBanker.Web.ViewModels.AccChartViewModel
@{
    ViewBag.Title = "Acc Code List";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    <link href="~/Content/jtable-custom.css" rel="stylesheet" />
}
<script type="text/javascript">

    $(document).ready(function () {
        var gridUrl = '@Url.Action("GetAccCodeList", "AccChart")';
        $('#grid').jtable({
            paging: true,
            pageSize: 10,
            sorting: true,
            defaultSorting: 'AccCode ASC',
            actions: {
                listAction: function (postData, jtParams) {
                    console.log("Loading from custom function...");
                    return $.Deferred(function ($dfd) {
                        $.ajax({
                            url: gridUrl + '?jtStartIndex=' + jtParams.jtStartIndex + '&jtPageSize=' + jtParams.jtPageSize + '&jtSorting=' + jtParams.jtSorting,
                            type: 'POST',
                            dataType: 'json',
                            data: postData,
                            success: function (data) {
                                $dfd.resolve(data);
                            },
                            error: function () {
                                $dfd.reject();
                            }
                        });
                    });
                },
                deleteAction: '/AccChart/DeleteAccCode',
                updateAction: '/AccChart/Edit'
            },
            fields: {
                AccID: {
                    key: true,
                    list: false,
                    create: false,
                    edit: false
                },
                SlNo: {
                    title: 'SL',
                    create: false,
                    edit: false,
                    width:'5%'
                },
                AccCode: {
                    title: 'Code',
                    create: false,
                    edit: false,
                    width: '5%'
                },
                AccName: {
                    title: 'Acc Name',
                    create: false,
                    edit: true,
                    width: '25%'
                },
                AccLevel: {
                    title: 'Level',
                    create: false,
                    edit: false,
                    width: '5%'
                },
                FirstLevel: {
                    title: 'First',
                    create: false,
                    edit: false
                },
                SecondLevel: {
                    title: 'Second',
                    create: false,
                    edit: false
                },
                ThirdLevel: {
                    title: 'Third',
                    create: false,
                    edit: false
                },
                FourthLevel: {
                    title: 'Fourth',
                    create: false,
                    edit: false
                },
                FifthLevel: {
                    title: 'Fifth',
                    create: false,
                    edit: false
                },
                IsTransaction:{
                    title: 'Transaction',
                    create: false,
                    edit: true,
                    type: 'checkbox',
                    values: { 'false': 'In Active', 'true': 'Active' },
                },
                OfficeLevel: {
                    title: 'Office',
                    options: { '4': 'Branch Office', '3': 'Area Office', '2': 'Zone Office', '1': 'Head Office' },
                    create: false,
                    edit: true
                },
                ModuleID: {
                    title: 'Module',
                    options: { '1': 'Accounting', '2': 'Portfolio', '8': 'Reconcile' },
                    create: false,
                    edit: true
                },
                NoteID: {
                    title: 'Note',
                    options: '/AccChart/GetAccNote',
                    create: false,
                    edit: true,
                    list:false
                },
                NoteName: {
                    title: 'Note',
                    create: false,
                    edit: false

                }
            }
        });

        //$('#grid').jtable('load');
        reloadGrid();

    });
    function reloadGrid() {
        $("#loading").show();
        $('#grid').jtable('load', { filterColumn: $('#filterColumn').val(), filterValue: $('#filterValue').val() });
        $("#loading").hide();
    }

</script>
@Html.ActionLink("Add New", "CreateNWAccChart", null, new { @class = "btn btn-info btn-sm pull-right" })
<h2 class="page-title">Account Code List</h2>
<div class="row">
    <div class="col-md-1">
        <label class="control-label" style="padding-top:8px;">Filter By:</label>
    </div>
    <div class="col-md-3">
        <select id="filterColumn" class="form-control">
            <option value="ViewAll">View All</option>
            <option value="AccCode">Account Code</option>
            <option value="AccName">Account Name</option>
        </select>
    </div>
    <div class="col-md-3">
        <input type="text" id="filterValue" placeholder="Type Search Text" class="form-control" />
    </div>
    <div class="col-md-5">
        <input type="button" id="btnSearch" value="Search" class="btn btn-primary" onclick="reloadGrid();" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        &nbsp;
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div id="grid"></div>
    </div>
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/jtable")
}

