@{
    ViewBag.Title = "StaffWise SpecialSaving";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $("#txtFromDt").datepicker(
           {
               dateFormat: "dd-M-yy",
               showAnim: "scale"
           });
        $("#txtToDt").datepicker(
            {
                dateFormat: "dd-M-yy",
                showAnim: "scale"
            });

        $("#btnView").click(function (e) {
            e.preventDefault();
            var DateFrom = $("#txtFromDt").val();
            var DateTo = $("#txtToDt").val();
            //var Qtype = $("#ddlQtype").val();

            var url = '/KhatwaryReport/GetStaffWiseSpecialSavingReport?DateFrom=' + DateFrom + '&DateTo=' + DateTo;


            window.open(url, 'mywindow', 'fullscreen=yes, scrollbars=auto');
        });
    });
</script>
<h2 class="page-title">StaffWise SpecialSaving Report</h2>
