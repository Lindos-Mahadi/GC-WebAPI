@model gBanker.Web.ViewModels.SurveyMemberMasterViewModel
@{
    var NGOIdList = Model == null ? null : Model.NGOIdList;
}


<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal content-padding">
        <div>
            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 required">SurveyCode</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.SurveyCode, new { @class = "form-control required", @readonly = "true" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.NGOId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.NGOId, NGOIdList, new { @class = "form-control" })
                    </div>

                    <label class="control-label col-md-2" for="LoanAmount">Loan Amount</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.LoanAmount, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LoanAmount, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2" for="Remarks">Remarks</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control RemarksSurveyMemberNgo" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>