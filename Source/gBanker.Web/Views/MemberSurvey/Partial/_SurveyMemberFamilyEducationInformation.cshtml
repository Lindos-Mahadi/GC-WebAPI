@model gBanker.Web.ViewModels.SurveyMemberMasterViewModel
@{
    var InstituteIdList = Model == null ? null : Model.InstituteIdList;
    var InstituteTypeIdList = Model == null ? null : Model.InstituteTypeIdList;
}


<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal content-padding">
        <div>
            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 required">SurveyCode</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(model => model.SurveyCode, new { @class = "form-control required", @readonly = "true" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.InstituteTypeId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.InstituteTypeId, InstituteTypeIdList, new { @class = "form-control" })
                    </div>

                    @Html.LabelFor(model => model.InstituteId, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-4">
                        @Html.DropDownListFor(model => model.InstituteId, InstituteIdList, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 for=" DateFrom"">Reside From</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.DateFrom, new { @class = "form-control required" })
                    </div>

                    <label class="control-label col-md-2 for=" DateTo"">Date To</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.DateTo, new { @class = "form-control required" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2" for="ClassName">ClassName</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.ClassName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ClassName, "", new { @class = "text-danger" })
                    </div>

                    <label class="control-label col-md-2" for="Remarks">Remarks</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Remarks, new {htmlAttributes = new {@class = "form-control RemarksMemberFamilyEducationInformation" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>