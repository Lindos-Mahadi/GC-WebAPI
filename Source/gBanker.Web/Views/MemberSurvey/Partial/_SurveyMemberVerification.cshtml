
@model gBanker.Web.ViewModels.SurveyMemberMasterViewModel
@{
}


<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal content-padding">
        <div>

            <div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2" for="VarificationNo">Varification No</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.VarificationNo, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.VarificationNo, "", new {@class = "text-danger"})
                    </div>

                    <label class="control-label col-md-2" for="VarificationTypeId">Varification TypeId</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.VarificationTypeId, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.VarificationTypeId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>

            @*<div class="row">
                <div class="form-group">
                    <label class="control-label col-md-2 for=" SurveyDate"">Survey Date</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(model => model.SurveyDate, new {@class = "form-control required"})
                    </div>
                </div>
            </div><hr/>*@

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.VarifyDocument, htmlAttributes: new { @class = "control-label required col-md-2" })
                    <div class="col-md-4">
                        <img id="accountScanCopyImg" style="width:100px; height:100px;" src='~/Content/images/varificationimage.jpg' alt="Account Scan Copy" class="img-responsive" />
                        @Html.TextBoxFor(model => model.VarificationDocumentImageFile, new { type = "file", @onchange = "ShowAccountScanCopyFile(this);", @class = "form-control" })
                        <input type="button" id="btnRemoveAccountScanCopy" value="Remove" class="btn btn-primary" onclick="RemoveAccountScanCopy()" />
                    </div>
                    
                    <label class="control-label col-md-2" for="Remarks">Remarks</label>
                    <div class="col-md-4">
                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>